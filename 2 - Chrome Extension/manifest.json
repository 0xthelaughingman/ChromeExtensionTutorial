{
  "manifest_version": 2,

  "name": "DogeCam",
  "description": "This extension will animate your live video",
  "version": "1.1",

  "browser_action": {
    "default_icon": "Doge.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [ 
    {
      "matches": ["https://*/*"],
      "js": ["body-pix.js", "tfjs.js", "render.js"],
	  "run_at": "document_start"
    } 
  ],
  
  "permissions": [
    "activeTab",
	"storage"
  ],
  
  "background": {
	"scripts":	["render.js"]
  }
}